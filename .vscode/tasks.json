{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MSVC x64 Debug",
            "type": "shell",
            "command": "build_msvc_x64.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build MSVC x64 Release",
            "type": "shell",
            "command": "build_msvc_x64.bat",
            "args": [
                "release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Clang Win x64 Debug",
            "type": "shell",
            "command": "build_clang_win_x64.bat",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Clang Win x64 Release",
            "type": "shell",
            "command": "build_clang_win_x64.bat",
            "args": [
                "release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "del ${workspaceFolder}\\build\\* /q",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}